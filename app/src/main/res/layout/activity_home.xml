                                            android:layout_width="fill_parent"
                                            android:layout_weight="1"
                                            android:layout_height="0dp"
                                            android:layout_gravity="top"
                                            app:cardBackgroundColor="@color/SteelBlue"
                                            app:cardCornerRadius="4dp"
                                            android:layout_margin="12dp">
