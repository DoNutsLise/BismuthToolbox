                                                            android:layout_height="wrap_content"
                                                            android:text="@string/active"
                                                            android:textAlignment="center"
                                                            android:background="@color/YellowGreen"
                                                            android:textSize = "16sp"
                                                            android:ellipsize="end"
                                                            android:maxLines="1"/>
